global:
  scrape_interval: 15s
  evaluation_interval: 15s

scrape_configs:
  - job_name: 'prometheus'
    static_configs:
      - targets: ['localhost:{{ prometheus_port }}']

 # Scrape configuration for Node Exporter
  - job_name: 'node_exporter'
    static_configs:
      - targets:
          - '192.168.60.60:9100'  # First VM
          - '192.168.60.61:9100'  # Second VM